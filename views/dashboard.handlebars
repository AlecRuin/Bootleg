{{#if loggedIn}}
<section>
  <h2>Create New Post</h2>

  <form class="new-post-form" action="./api/posts" method="POST" enctype="multipart/form-data">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <label for="image-input">Link</label>
    <input required accept="image/*"  type="file" id="image-input" name="image_input" />
    <input type="submit" class="btn" value="Upload"/>
  </form>
</section>
{{/if}}
<section>
  <ol>
    {{#each postData as |post|}}
    {{log post}}
    <li>
      <div>{{user.username}}</div>
      <a href={{concat "/post/" image_url}}>
      <img src={{concat "./images/" image_url}}> 
      <h5>{{caption}}</h5>
      </a>
    </li>
    {{/each}}
  </ol>
</section>